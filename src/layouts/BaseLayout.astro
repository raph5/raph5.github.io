---
import BaseHead from "../components/BaseHead.astro";
const {frontmatter} = Astro.props;
const title = frontmatter.title ?? "Raphael Guyader"
const description = frontmatter.description ?? "Raphael Guyader's personal website"
---

<html lang="en">
	<head>
    <BaseHead />
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
  </head>
	<body>
    <header class="header">
      <a class="header__title" href="/"><h1>Raphael Guyader</h1></a>
      <nav class="nav">
        <ul>
          <li class="nav__link"><a href="mailto:raphguyader@gmail.com">mail</a></li>
          <li class="nav__link"><a href="https://github.com/raph5" target="blank">github</a></li>
        </ul>
      </nav>
    </header>
    <main class="main">
      <slot />
    </main>
    <footer class="footer">
    </footer>
	</body>
</html>
